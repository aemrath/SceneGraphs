<scene>
    <instance name="box" path="models/box"></instance>
    <group name="closed-window-wall">
        <transform>
            <transform name="top-unit">
                <set>
                    <translate>0 0 -1</translate>
                </set>
                <group name="top-unit" from="scenegraphmodels/wall-unit.xml">
                </group>
            </transform>
        </transform>


        <transform>
            <transform name="middle-closed-unit">
                <set>
                    <translate>0 -2.5 0</translate>
                </set>
                <object instanceof="box">
                    <material>
                        <color>0 0 1</color>
                    </material>
                </object>
            </transform>
        </transform>

        <transform>
            <transform name="outside-sill">
                <set>
                    <translate>0 1 .51</translate>
                    <scale>1 2 .18</scale>
                </set>
                <object instanceof="box">
                    <material>
                        <color>.1 .1 .1</color>
                    </material>
                </object>
            </transform>
        </transform>

        <transform>
            <transform name="inside-sill-bottom">
                <set>
                    <translate>0 -1 .51</translate>
                    <scale>1 2 .18</scale>
                </set>
                <object instanceof="box">
                    <material>
                        <color>.1 .1 .1</color>
                    </material>
                </object>
            </transform>
        </transform>

        <transform>
            <transform name="inside-sill-left">
                <set>
                    <translate>-.51 -1 0</translate>
                    <scale>.18 2 1</scale>
                </set>
                <object instanceof="box">
                    <material>
                        <color>.1 .1 .1</color>
                    </material>
                </object>
            </transform>
        </transform>

        <transform>
            <transform name="inside-sill-right">
                <set>
                    <translate>.51 -1 0</translate>
                    <scale>.18 2 1</scale>
                </set>
                <object instanceof="box">
                    <material>
                        <color>.1 .1 .1</color>
                    </material>
                </object>
            </transform>
        </transform>

        <transform>
            <transform name="inside-sill-top">
                <set>
                    <translate>0 -1 -.51</translate>
                    <scale>1 2 .18</scale>
                </set>
                <object instanceof="box">
                    <material>
                        <color>.1 .1 .1</color>
                    </material>
                </object>
            </transform>
        </transform>

        <transform>
            <transform name="bottom-unit">
                <set>
                    <translate>0 0 1</translate>
                </set>
                <group name="bottom-unit" from="scenegraphmodels/wall-unit.xml">
                </group>
            </transform>
        </transform>

    </group>
</scene>