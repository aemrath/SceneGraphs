<scene>
    <instance name="box" path="models/box"></instance>
    <group>
        <transform>
        <transform name="ground">
            <set>
                <scale>70 1 70</scale>
            </set>
            <group name="ground" from="scenegraphmodels/ground.xml">
            </group>
        </transform>
        </transform>

        <transform>
        <transform name="front">
            <set>
                <translate>0 45 27</translate>
                <rotate>90 1 0 0</rotate>
                <scale>6 1 10</scale>
            </set>
            <group name="front" from="scenegraphmodels/wall.xml">
            </group>
        </transform>
        </transform>

        <transform>
        <transform name="right_wall">
            <set>
                <translate>27 45 0</translate>
                <rotate>270 0 0 1</rotate>
                <rotate>90 0 1 0</rotate>
                <scale>6 1 10</scale>
            </set>
            <group name="right_wall" from="scenegraphmodels/wall.xml">
            </group>
        </transform>
        </transform>

        <transform>
        <transform name="left_wall">
            <set>
                <translate>-27 45 0</translate>
                <rotate>90 0 0 1</rotate>
                <rotate>270 0 1 0</rotate>
                <scale>6 1 10</scale>
            </set>
            <group name="left_wall" from="scenegraphmodels/wall.xml">
            </group>
        </transform>
        </transform>

        <transform>
        <transform name="back">
            <set>
                <translate>0 45 -27</translate>
                <rotate>180 0 0 1</rotate>
                <rotate>270 1 0 0</rotate>
                <scale>6 1 10</scale>
            </set>
            <group name="back" from="scenegraphmodels/wall.xml">
            </group>
        </transform>
        </transform>

        <transform>
            <transform name="roof">
                <set>
                    <translate>0 90 0</translate>
                    <scale>54 1 54</scale>
                </set>
            <group name="roof" from="scenegraphmodels/roof.xml">
            </group>
            </transform>
        </transform>
    </group>
</scene>